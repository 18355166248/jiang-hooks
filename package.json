{
  "name": "jiang-hooks",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/18355166248/jiang-hooks.git"
  },
  "scripts": {
    "init": "rm -rf node_modules && yarn && npm run clean && npm run bootstrap && npm run build",
    "start": "npm run dev",
    "dev": "dumi dev",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "build": "lerna run build",
    "test": "jest",
    "test-coverage": "npm run test -- --coverage --watchAll=false || exit 0",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\"",
    "build:doc": "dumi build",
    "pub:doc": "surge ./dist --domain ahooks.js.org",
    "pub": "lerna publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@testing-library/react": "^10.4.3",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^26.0.3",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@umijs/fabric": "^2.0.11",
    "antd": "^4.3.5",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "del": "^5.1.0",
    "dumi": "^1.0.31",
    "eslint": "^7.3.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "3.20.2",
    "lint-staged": "^11.0.1",
    "mockjs": "^1.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.test.ts": "npm run test-coverage",
    "*.{js|ts|tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
